<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    {{input
      type="text"
      class="new-todo"
      placeholder="What needs to be done?"
      value=newTitle
      action="createTodo"}}
  </header>

  <section class="main">
    <ul class="todo-list">
      {{#each todo in model itemController="todo"}}
        <li {{bind-attr class="todo.model.isCompleted:completed todo.model.isEditing:editing"}}>
          {{#if todo.model.isEditing}}
            {{edit-todo class="edit" value=todo.model.title focus-out="acceptChanges"
              insert-newline="acceptChanges"}}
          {{else}}
            {{input type="checkbox" checked=todo.model.isCompleted class="toggle"}}
            <label {{action "editTodo" on="doubleClick"}}>{{todo.model.title}}</label><button {{action "removeTodo"}} class="destroy"></button>
          {{/if}}
        </li>
      {{/each}}
    </ul>

    <input type="checkbox" class="toggle-all">
  </section>

  <footer class="footer">
    <span class="todo-count">
      <strong>{{remaining}}</strong> {{inflection}} left
    </span>
    <ul class="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        <a href="active">Active</a>
      </li>
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>

    <button class="clear-completed">
      Clear completed (1)
    </button>
  </footer>
</section>

<footer class="info">
  <p>Double-click to edit a todo</p>
</footer>
